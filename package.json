{
  "name": "nuxt-responder",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "start": "nuxt start",
    "postinstall": "nuxt prepare",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:e2e": "cypress run --spec 'cypress/e2e/**/*.cy.ts'",
    "test:security": "cypress run --spec 'cypress/e2e/security.cy.ts'",
    "test:functionality": "cypress run --spec 'cypress/e2e/functionality.cy.ts'",
    "test:regression": "cypress run --spec 'cypress/e2e/regression.cy.ts'",
    "deploy:netlify": "bash scripts/deploy-netlify.sh",
    "deploy:netlify:preview": "netlify deploy --dir=.output/public",
    "netlify:dev": "netlify dev"
  },
  "dependencies": {
    "@iconify-json/heroicons": "^1.1.21",
    "@iconify-json/simple-icons": "^1.1.99",
    "@nuxt/ui": "latest",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.9.0",
    "marked": "^12.0.0",
    "nuxt": "latest",
    "openai": "^4.55.0"
  },
  "devDependencies": {
    "cypress": "^14.5.4",
    "cypress-file-upload": "^5.0.8"
  }
}
